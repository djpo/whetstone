<div class="container">
  <h4>create your goal</h4>

  <div class="row">
    <form class="col m8 s12" method="post" action="/goal/create">

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">name of goal</div>
          </div>
          <div class="col s8 goal-input">
            <input type="text" id="name" placeholder="Ima be a sicknastay painter!" class="validate">
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">content type</div>
          </div>
          <div class="col s8 goal-input">
            <select>
              <option value="image">image</option>
              <option value="text">text</option>
              <option value="audio">audio</option>
            </select>
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">submissions</div>
          </div>
          <div class="col s8 goal-input">
            <input type="number" id="frequency" placeholder="5" min="1" max="10" class="validate">
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">per</div>
          </div>
          <div class="col s8 goal-input">
            <input type="radio"name="period_length_group" id="week">
            <label for="week">week</label>
            <br>
            <input type="radio" name="period_length_group" id="month">
            <label for="month">month</label>
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">goal length (months)</div>
          </div>
          <div class="col s8 goal-input">
            <input type="number" id="total_length" placeholder="6" min="1" max="12" class="validate">
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">publish submissions to public portfolio</div>
          </div>
          <div class="col s8 goal-input">
            <input type="radio" name="publish_group" id="all">
            <label for="all">all</label>
            <br>
            <input type="radio" name="publish_group" id="interval">
            <label for="interval">one per week/month</label>
              <!-- I'd love for the 'week/month' to reflect the period_length selected above -DP -->
            <br>
            <input type="radio" name="publish_group" id="manual">
            <label for="manual">manual only</label>
          </div>
        </div>

        <div class="row">
          <div class="col s8 offset-s4">
            <button type="submit" name="action" class="btn right">submit</button>
          </div>
        </div>

    </form>
  </div>
</div>