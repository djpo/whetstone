<div class="container">
	<h3>create your goal</h3>

	<div class="row">
		<form class="col s10" method="post" action="/goal/create">

				<!-- tmeplate input
			  <div class="row input-field">
			  	<div class="col s3 goal-label">template</div>
					<div class="col s9 goal-input">
						<input placeholder="" id="" type="" class="validate">
					</div>
				</div>
				-->

				<div class="row valign-wrapper input-field">
					<div class="col s3 goal-label">
						<div class="valign right">name of goal</div>
					</div>
					<div class="col s9 goal-input">
						<input placeholder="Ima be a sicknastay painter!" id="name" type="text" class="validate">
					</div>
				</div>

			  <div class="row valign-wrapper input-field">
			  	<div class="col s3 goal-label">
			  		<div class="valign right">content type</div>
			  	</div>
					<div class="col s9 goal-input">
						<select>
				      <option value="i">image</option>
				      <option value="t">text</option>
				      <option value="a">audio</option>
				    </select>
					</div>
				</div>

			  <div class="row valign-wrapper input-field">
			  	<div class="col s3 goal-label">
			  		<div class="valign right">submissions</div>
			  	</div>
					<div class="col s9 goal-input">
						<input placeholder="5" id="submissions" type="number" min="1" max="10" class="validate">
					</div>
				</div>

				<div class="row valign-wrapper input-field">
			  	<div class="col s3 goal-label">
			  		<div class="valign right">per</div>
			  	</div>
					<div class="col s9 goal-input">
						<select>
				      <option value="w">week</option>
				      <option value="m">month</option>
				    </select>
					</div>
				</div>

				<!-- Time span
					Minimum 4 weeks with ability to increase time
					Optional incentive price based on frequency
				-->

				<!-- make this radio buttons: auto all, once per week/month, manual -->
				<div class="row valign-wrapper input-field">
			  	<div class="col s3 goal-label">
			  		<div class="valign right">publish to public portfolio</div>
			  	</div>
					<div class="col s9 goal-input">
				    <p>
				      <input type="checkbox" class="filled-in" id="box1" checked="checked" />
				      <label for="box1">box1</label>
				    </p>
				    <input type="checkbox" class="filled-in" id="box2" checked="checked" />
				    <label for="box2">box2</label>
			  	</div>
				</div>

				<div class="row">
					<div class="col offset-s3">
						<button class="btn disabled" type="submit" name="action">submit</button>
					</div>
				</div>

		</form>
	</div>
</div>