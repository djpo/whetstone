<div class="row">
  <div class="col s6 m3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">January 30th, 2016</span>
        <p>503 Words</p>
      </div>
      <div class="card-action">
        <a href="#">View</a>
        <a href="#">Share</a>
      </div>
    </div>
  </div>
  <div class="col s6 m3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">January 31th, 2016</span>
        <p>515 Words</p>
      </div>
      <div class="card-action">
        <a href="#">View</a>
        <a href="#">Share</a>
      </div>
    </div>
  </div>
  <div class="col s6 m3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">February 01, 2016</span>
        <p>639 Words</p>
      </div>
      <div class="card-action">
        <a href="#">View</a>
        <a href="#">Share</a>
      </div>
    </div>
  </div>
</div>
<form action="/goal/upload" enctype="multipart/form-data" method="post">
  <div class="file-field input-field">
    <div class="btn">
      <span>File</span>
      <input type="file" name="submission">
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text">
    </div>
  </div>
  <input type="submit">
</form>

<div class="row" style="border: 2px solid black">
  <h5>goal profile</h5>
  <ul>
    <li>name: <%= goal.name %></li>
    <li>content: <%= goal.content %></li>
    <li>frequency: <%= goal.frequency %> per <%= goal.period %>
    <li>length: <%= goal.length %> months</li>
    <li>members: <%= goal.members %></li>
    <li>publish: <%= goal.publish %></li>
  </ul>
</div>

