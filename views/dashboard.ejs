<div class="row">

  <!-- left column -->
  <div class="col m3">

    <!-- goal info -->
    <div class="row">
      <div class="col m12 left-panel-box">
        <h5><%= goal.name %></h5>
        <p>week <%= goal.current_week + 1 %> of <%= goal.duration %><br>
          content type: <%= goal.content_type %><br>
          <%= weeklySubs.length %> of <%= goal.frequency %> submissions made this week</br>
          members: <%= goal.members.length %>
        </p>
      </div>
    </div>

    <!-- upload box -->
    <div class="row">
      <div id="upload-box" class="col m12 left-panel-box">

        <% if (currentUser.currentGoals[currentUser.activeGoal].submitted_today) { %>
          <h6>you uploaded for this goal today.<br>good job!</h6>

        <% } else { %>
          <h6>upload content for today!</h6>
          <form action="/submissions/upload" enctype="multipart/form-data" method="post">
            <div class="row">

              <!-- File chooser -->
              <div class="file-field input-field col m5">
                <!-- File chooser button -->
                <div class="btn upload-button">
                  <span>choose file</span>
                  <input type="file" name="submission">
                </div>
                <!-- To be hidden -->
                <div class="file-path-wrapper" style="border: 2px solid #455a64">
                  <input class="file-path validate" type="text">
                </div>
              </div>

              <!-- Submit button -->
              <div class="col m5">
                <button class="upload-button btn waves-effect waves-light" type="submit" id="submit-button" name="action">
                  <i class="material-icons right">send</i>
                </button>
              </div>

            </div>

            <!-- User note field -->
            <p>write a note about your submission</p>

            <div class="row" style="border: 2px solid rgba(179,118,87,.5)">
              <div class="input-field">
                <i class="material-icons prefix">label</i>
                <input id="icon_prefix" type="text" name="note" class="validate">
              </div>
            </div>

          </form>
        <% } %>

      </div>
    </div>

  </div>

  <!-- middle column -->
  <div class="col m6" style="position: relative; top: -8px;">

    <!-- row of 3 placeholders -->
