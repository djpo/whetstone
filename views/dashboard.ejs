
<!-- Goal dashboard
  See progress/upcoming goal/checkpoint
  Be able to submit
  Be able to comment on my submission
  Able to be commented on by group    
  View my submissions
  Notifications of group
  View group submissions, or able to click to get to a specific group member -->

<div class="row">
  <div class="col m4 push-m8 s12  z-depth-1" id="upload-box">
    <h5 class="center-align">Upload</h5>
    <form action="/goal/upload" enctype="multipart/form-data" method="post">
      <div class="file-field input-field">
        <div class="btn">
          <span>File</span>
          <input type="file" name="submission">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <div class="input-field col s12">
        <i class="material-icons prefix">label</i>
        <input id="icon_prefix" type="text" name="note" class="validate">
      </div>
      <button class="btn waves-effect waves-light" type="submit" id="submit-button" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </form>
  </div>
  <div class="col m8 pull-m4 s12">
    <h3 class="center-align"><%= goal.name %></h3>
    <div class="row">
      <div class="col m4 s12">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">January 30th, 2016</span>
            <p>503 Words</p>
          </div>
          <div class="card-action">
            <a href="#">View</a>
            <a href="#">Share</a>
          </div>
        </div>
      </div>
      <div class="col m4 s12">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">January 31th, 2016</span>
            <p>515 Words</p>
          </div>
          <div class="card-action">
            <a href="#">View</a>
            <a href="#">Share</a>
          </div>
        </div>
      </div>
      <div class="col m4 s12">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">February 01, 2016</span>
            <p>639 Words</p>
          </div>
          <div class="card-action">
            <a href="#">View</a>
            <a href="#">Share</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




