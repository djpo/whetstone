<div id="login-modal" class="row modal">
    <form class="login-form" method="post" action="/auth/login">
      <div class="row">
        <div class="input-field col s12 center">
          <p class="center login-form-text">Login</p>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <input placeholder="" id="username" type="text" name="username" class="validate" required>
          <label for="username">Email</label>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <input placeholder="" id="password" type="password" name="password" class="validate" required>
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input type="submit" class="waves-effect waves-light btn" style="width: 100%">
        </div>
      </div>
    </form>
</div>