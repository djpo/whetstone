<div class="container">
  <h4>create your goal</h4>

  <div class="row">
    <form class="col m8 s12" method="post" action="/goal/save">

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">name of goal</div>
          </div>
          <div class="col s8 goal-input">
            <input type="text" id="name" name="name" placeholder="Ima be a sicknastay painter!" class="validate">
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">content type</div>
          </div>
          <div class="col s8 goal-input">
            <input type="radio" id="image" name="content_type" value="image">
            <label for="image">image</label>
            <br>
            <input type="radio" id="text" name="content_type" value="text">
            <label for="text">text</label>
            <br>
            <input type="radio" id="audio" name="content_type" value="audio">
            <label for="audio">audio</label>
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">submissions</div>
          </div>
          <div class="col s8 goal-input">
            <input type="number" id="frequency" name="frequency" placeholder="5" min="1" max="10" class="validate">
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">goal duration (weeks)</div>
          </div>
          <div class="col s8 goal-input">
            <input type="number" id="duration" name="duration" placeholder="12" min="4" max="52" class="validate">
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">publish submissions to public portfolio</div>
          </div>
          <div class="col s8 goal-input">
            <input type="radio" id="all" name="publish" value="all">
            <label for="all">all</label>
            <br>
            <input type="radio" id="interval" name="publish" value="weekly">
            <label for="weekly">one per week</label>
            <br>
            <input type="radio" id="manual" name="publish" value="manual">
            <label for="manual">manual only</label>
          </div>
        </div>

        <div class="row">
          <div class="col s8 offset-s4">
            <input type="submit" class="btn right">
          </div>
        </div>

    </form>
  </div>
</div>