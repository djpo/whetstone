<div class="container">
  <h4>create your goal</h4>

  <div class="row">
    <form class="col m8 s12" method="post" action="/goal/save">

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">name of goal</div>
          </div>
          <div class="col s8 goal-input">
            <input type="text" id="name" name="name" placeholder="Ima be a sicknastay painter!" class="validate">
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">content type</div>
          </div>
          <div class="col s8 goal-input" id="content-type-selection">
            <input type="radio" id="image" name="contentType" value="image">
            <label for="image">image</label>
            <br>
            <input type="radio" id="text" name="contentType" value="text">
            <label for="text">text</label>
            <br>
            <input type="radio" id="audio" name="contentType" value="audio">
            <label for="audio">audio</label>
          </div>
        </div>

        <div class="row valign-wrapper input-field" id="word-count-input">
            <div class="col s4 goal-label">
                <div class="valign right">minimum word count</div>
            </div>
            <div class="col s8 goal-input">
                <input type="number" id="minimumWords" name="minimumWords" placeholder="0" min="0">
            </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">submissions per week</div>
          </div>
          <div class="col s8 goal-input">
            <input type="number" id="frequency" name="frequency" placeholder="5" min="1" max="7" class="validate">
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">incentive</div>
          </div>
          <div class="col s8 goal-input">
            <input type="number" id="incentive" name="incentive" placeholder="$0" min="0" max="100" class="validate">
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">goal duration (weeks)</div>
          </div>
          <div class="col s8 goal-input">
            <input type="number" id="duration" name="duration" placeholder="12" min="4" max="52" class="validate">
          </div>
        </div>

        <div class="row valign-wrapper input-field">
          <div class="col s4 goal-label">
            <div class="valign right">invite friends (comma separated)</div>
          </div>
          <div class="col s8 goal-input">
            <input type="text" id="friendsEmails" name="friendsEmails" class="validate">
          </div>
        </div>

